<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragmentViews.profile_fragment"
    android:background="@color/backgroundApp">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profileImageContainer"
        android:padding="10dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@mipmap/profilelogo"
            android:layout_centerHorizontal="true"
            android:id="@+id/imgViewProfileImage">

        </ImageView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profileImageContainer"
        android:padding="10dp"
        android:id="@+id/FormContainer">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edtFullName"
            android:textSize="20sp"
            android:text="Full Name"
            android:textColorHint="@color/editTextColorText"
            android:background="@color/editTextBackground"
            android:textColor="@color/black">

        </EditText>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:id="@+id/btnEdit"
            android:textSize="15sp"
            android:layout_below="@id/edtFullName"
            android:layout_margin="10dp"
            android:layout_centerHorizontal="true"
            android:background="@color/buttonBackground">


        </Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:textSize="15sp"
            android:layout_below="@+id/btnEdit"
            android:layout_margin="10dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/btnSave"
            android:background="@color/buttonBackground">

        </Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose an image"
            android:textSize="15sp"
            android:layout_below="@id/btnSave"
            android:id="@+id/btnChooseImage"
            android:layout_centerHorizontal="true"
            android:background="@color/buttonBackground">

        </Button>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/btnLogoutContainer"
        android:layout_below="@+id/FormContainer"
        android:padding="10dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnLogout"
            android:text="Logout"
            android:textSize="15sp"
            android:layout_centerInParent="true"
            android:background="@color/buttonBackground">

        </Button>

    </RelativeLayout>



</RelativeLayout>